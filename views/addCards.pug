doctype html
html(lang="en")
    head
        meta(charset = "UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Add a Card
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous")

    body
        div(class="m-auto w-50")
            h2(class="text-center") Add A Card
            form(action="../api/cards" method="post")
                label(for="person") Name:
                    input#person(type="text" name="person" required)
                br
                label(for="group") Group:
                    input#group(type="text" name="group")
                br
                label(for="cardImg") Upload a picture of the card: 
                    input#cardImg(type="file" accept="impage/png image/jpeg" name="cardImg" required)
                br
                label(for="album") Album it belongs to:
                    input#album(type="text", name="album")
                br
                label(for="year") Release Year:
                    input#year(type="text" name="year")
                br
                fieldset
                    label Do you currently have this card? 
                    label(for="collect") Yes
                        input#yes(type="radio" name="collect" value="true")
                    label(for="collect") No
                        input#no(type="radio" name="collect" value="false")
                br 
                - var userId = userId
                input(type="hidden" name="userId" value=userId)
                input(type="submit" value="Submit")
            